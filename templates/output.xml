<templateSet group="output">
  <template name="bmsg" value="Bukkit.broadcastMessage($END$);" description="Broadcasts a message using the Bukkit object" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="smsg" value="sender.sendMessage($END$);" description="Sends a message to a user." toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="MAVEN" value="true" />
    </context>
  </template>
</templateSet>